        .product-image-container {
            position: relative;
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .product-image-sticker-container {
            position: absolute;
            top: -10px;
            right: -12px;
        }

        .product-image-sticker-text {
            position: absolute;
            right: 50%; 
            top: 50%;
            color: white;
            font-weight: 600;
            text-align: center;
            transform: translate(50%, -50%);
        }

        .product-image-sticker-text div:first-child {
            font-size: 17px;
            line-height: 1;
        }

        .product-image-sticker-text div:last-child {
            font-size: 16px;
            line-height: 1;
        }

        .product-title {
            text-align: center;
            font-size: 12px;
            color: #585858;
            height: 52px;
            margin-bottom: 10px; 
        }

        .rating-container {
            display: flex;
            justify-content: space-between;
            width: 190px;
            position: relative;
            left: -5px;
            margin-bottom: 30px;
        }

        .stars {
            position: relative;
            top: 5px;
        }

        .star {
            float: left;
            margin-right: 2px;
        }

        .rating {
            font-size: 14px;
            font-weight: 600;
        }
        .rating-text {
